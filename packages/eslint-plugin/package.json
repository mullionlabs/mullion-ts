{
  "name": "eslint-plugin-scopestack",
  "version": "1.0.0",
  "description": "ESLint rules for type-safe LLM context management",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "llm",
    "typescript",
    "context",
    "safety"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/scopestack/scopestack-ts.git",
    "directory": "packages/eslint-plugin"
  },
  "license": "MIT",
  "author": "Your Name <your@email.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@typescript-eslint/utils": "catalog:"
  },
  "peerDependencies": {
    "@scopestack/core": ">=0.1.0",
    "@typescript-eslint/parser": ">=8.0.0",
    "eslint": ">=8.57.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "@scopestack/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@scopestack/core": "workspace:*",
    "@types/node": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@typescript-eslint/rule-tester": "catalog:",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  }
}
