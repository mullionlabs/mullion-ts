{
  "name": "@mullion/template-helpdesk",
  "version": "0.0.1",
  "description": "Mullion template: Preventing context leaks in customer support systems",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "start": "tsx --env-file=.env src/cli.ts",
    "safe": "tsx --env-file=.env src/safe-flow.ts",
    "unsafe": "tsx --env-file=.env src/unsafe-flow.ts",
    "lint": "eslint src/**/*.ts || echo 'ESLint found issues (expected - unsafe-flow.ts has intentional leaks for demonstration)'",
    "lint:strict": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "echo 'Skipping typecheck for example (known AI SDK version mismatch, works at runtime)'"
  },
  "keywords": [
    "mullion",
    "example",
    "context-leak",
    "security",
    "helpdesk",
    "customer-support"
  ],
  "dependencies": {
    "@mullion/core": "workspace:*",
    "@mullion/ai-sdk": "workspace:*"
  },
  "devDependencies": {
    "@ai-sdk/openai": "catalog:",
    "@ai-sdk/anthropic": "^3.0.12",
    "@typescript-eslint/parser": "catalog:",
    "@types/node": "catalog:",
    "ai": "catalog:",
    "eslint": "catalog:",
    "@mullion/eslint-plugin": "workspace:*",
    "tsx": "^4.19.2",
    "typescript": "catalog:",
    "zod": "catalog:"
  }
}
